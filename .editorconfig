# Adapted from the example at
# https://editorconfig.org/
#
root = true
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
# Use tabs for indentation in makefiles.
[Makefile]
indent_style = tab
[*.mk]
indent_style = tab
